<resources>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!--<item name="iconSettings">@drawable/ic_settings_white_24dp</item>-->

        <item name="colorPrimary">@color/dark_primary_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primary</item>

        <item name="android:navigationBarColor">@color/black</item>
        <!--<item name="colorControlHighlight">@color/primary_dark</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>

        <item name="android:navigationBarColor">@color/primary_dark</item>

    </style>

    <!-- SettingsActivity Theme -->
    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>